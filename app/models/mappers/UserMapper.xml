<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="models.mappers.UserMapper">
	<resultMap id="BaseResultMap" type="models.User" />
	<update id="updateById" parameterType="models.User">
		update user
		<set>
			<if test="email!= null and email!=''">
				email = #{email},
			</if>
			<if test="name != null and name != ''">
				name = #{name},
			</if>
			<if test="avatar != null and avatar != ''">
				avatar = #{avatar},
			</if>
			<if test="role != null and role != ''">
				role = #{role},
			</if>
			<if test="userId != null and userId != ''">
				user_id = #{userId},
			</if>			
			qq = #{qq},
			weixin = #{weixin}
		</set>
		where id = #{id}
	</update>
	<update id="updateUserAuthById" parameterType="models.User">
		update user
		is_auth = #{isAuth}
		where id = #{id}
	</update>
	<!-- 后台管理：用户列表 -->
	<sql id="where">
		<where>
			u.is_delete = #{isDelete}
			<if test="name !=null">
				and u.name like '%${name}%'
			</if>
			<if test="email !=null">
				and u.email=#{email}
			</if>
			<if test="phone !=null">
				and u.phone like '%${phone}%'
			</if>
			<if test="userType !=null">
				and u.role=#{userType}
			</if>
			<if test="userId > 0">
				and u.user_id=#{userId}
			</if>
			<if test="createTimeStart !=null">
				<![CDATA[ and u.create_time>=#{createTimeStart} ]]>
			</if>
			<if test="createTimeEnd !=null">
				<![CDATA[ and u.create_time<=#{createTimeEnd} ]]>
			</if>
		</where>
	</sql>
	<select id="selectListByVo" resultMap="BaseResultMap">
		select * from user u
		<include refid="where" />
		order by u.create_time desc
		limit #{startIndex}, #{pageSize}
	</select>
	<select id="countVo" resultType="java.lang.Integer">
		select count(1) from user u
		<include refid="where" />
	</select>
</mapper>
